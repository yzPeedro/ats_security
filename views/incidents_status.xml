<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="security_incidents_status_tree" model="ir.ui.view">
        <field name="name">ats.security.incidents.status.tree</field>
        <field name="model">ats.security.incidents.status</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="security_incidents_status_action" model="ir.actions.act_window">
        <field name="name">Status de Incidentes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ats.security.incidents.status</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There are no incident status records in the database. Please register a status before registering incidents.
            </p>
        </field>
    </record>


</odoo>